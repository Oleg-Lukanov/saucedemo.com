{
  "name": "WDIO",
  "type": "module",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@wdio/allure-reporter": "^9.0.4",
    "@wdio/cli": "^8.36.1",
    "@wdio/local-runner": "^8.36.1",
    "@wdio/mocha-framework": "^8.36.1",
    "@wdio/spec-reporter": "^8.36.1",
    "@wdio/visual-service": "^4.1.2",
    "allure-commandline": "^2.30.0",
    "cross-env": "^7.0.3",
    "webdriver-manager": "^12.1.9"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.js",
    "test": "cross-env ENV=local npx wdio run ./wdio.conf.js",
    "test:chrome": "cross-env BROWSER=chrome npx wdio run ./wdio.conf.chrome.js",
    "test:firefox": "npx wdio run ./wdio.conf.firefox.js"
    "test:edge": "cross-env BROWSER=edge npx wdio run ./wdio.conf.edge.js",
    "test:single": "npx wdio run --spec ./test/specs/test.e2e.js",
    "report:generate:open": "allure generate allure-results --clean -o allure-report && allure open",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "docker:test": "docker-compose up --abort-on-container-exit --exit-code-from wdio",
  },
  "dependencies": {
    "chai": "^5.1.1"
  }
}
